# Default settings for all hosts
Host *
  # Automatically add new host keys to the user known hosts files
  StrictHostKeyChecking ask
  # Enable the sharing of multiple sessions over a single network connection
  ControlMaster auto
  # Specify the path to the control socket used for connection sharing
  ControlPath ~/.ssh/sockets/%r@%h-%p
  # Specify a 60-second timeout for the master connection when it's unused
  ControlPersist 60s
  #IdentityFile ~/.ssh/id_rsa
  AddKeysToAgent yes

Host hb
  HostName 10.0.0.127
  Port 8022
  User u0_a2
  ForwardX11 yes
